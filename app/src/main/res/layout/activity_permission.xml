<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configurando permisos de Health Connect..."
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button_request_permissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conceder Permisos (Launcher)"
        android:enabled="false"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/button_open_health_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir Health Connect Directamente"
        android:enabled="false" />

</LinearLayout>